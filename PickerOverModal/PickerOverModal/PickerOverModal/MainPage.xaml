<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PickerOverModal.MainPage"
             Title="Main">
  <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
    <Label Text="Main" VerticalOptions="Center" HorizontalOptions="Center" />
    <Picker x:Name="ThePicker" HorizontalOptions="Center" VerticalOptions="Center" WidthRequest="300" Title="The Picker">
      <Picker.Items>
        <x:String>1</x:String>
        <x:String>2</x:String>
      </Picker.Items>
    </Picker>
    <Button x:Name="TheButton" Text="Show Action Sheet"></Button>
  </StackLayout>
</ContentPage>